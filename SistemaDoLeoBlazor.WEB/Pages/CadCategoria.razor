@page "/CadCategoria"

<div class="row d-flex d-xl-flex justify-content-center justify-content-xl-center">
    <div class="col-sm-12 col-lg-10 col-xl-9 col-xxl-7 bg-white shadow-lg" style="border-radius: 5px;margin-top: 60px;">
        <div class="p-5">
            <div class="text-center">
                <h4 class="text-dark mb-4">Cadastro de Categoria</h4>
            </div><!-- Start: Register Form -->
            <form class="user">
                <!-- Start: Cod + Opções -->
                <div style="margin-bottom: 15px;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Cod. Categoria</h4>
                                    <div class="row">
                                        <div class="col-md-6" style="width: 154.281px;"><input class="form-control form-control-user" type="number" placeholder="Cod" required="" style="width: 141px;" name="Cod"></div>
                                        <div class="col-md-6"><button class="btn btn-primary" type="button" tabindex="-1">Pesquisar</button></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Opções</h4>
                                    <div class="form-check" style="width: 94.5px;"><input class="form-check-input" type="checkbox" id="formCheck-2" style="margin-top: 12px;" name="ChkSenha" tabindex="-1"><label class="form-check-label" for="formCheck-2" style="margin-top: 8px;">Inativo</label></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- End: Cod + Opções -->
                <!-- Start: Nome -->
                <div class="mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Nome</h4><input class="form-control form-control-user" type="text" id="email" placeholder="Nome" required="" name="Nome" maxlength="50">
                        </div>
                    </div>
                </div><!-- End: Nome -->
                <hr><!-- Start: Botões -->
                <div class="row">
                    <!-- Start: Novo -->
                    <div class="col-md-3" style="height: 45px;">
                        <!-- Start: Novo --><button class="btn btn-primary d-block btn-user w-100" data-bss-hover-animate="pulse" id="submitBtn" type="button" style="height: 39px;background: rgb(74,170,15);">Novo</button><!-- End: Novo -->
                    </div><!-- End: Novo -->
                    <!-- Start: Editar -->
                    <div class="col-md-3" style="height: 45px;">
                        <!-- Start: Editar --><button class="btn btn-primary d-block btn-user w-100" data-bss-hover-animate="pulse" id="submitBtn-1" type="button" style="height: 39px;background: var(--bs-btn-bg);">Editar</button><!-- End: Editar -->
                    </div><!-- End: Editar -->
                    <!-- Start: Excluir -->
                    <div class="col-md-3" style="height: 45px;">
                        <!-- Start: Excluir --><button class="btn btn-primary d-block btn-user w-100" data-bss-hover-animate="pulse" id="submitBtn-2" type="button" style="height: 39px;background: rgb(203,30,19);">Excluir</button><!-- End: Excluir -->
                    </div><!-- End: Excluir -->
                    <!-- Start: Cancelar -->
                    <div class="col-md-3" style="height: 45px;">
                        <!-- Start: Cancelar --><button class="btn btn-primary d-block btn-user w-100" data-bss-hover-animate="pulse" id="submitBtn-3" type="button" style="height: 39px;background: rgb(228,185,34);">Cancelar</button><!-- End: Cancelar -->
                    </div><!-- End: Cancelar -->
                </div><!-- End: Botões -->
                <hr><button class="btn btn-primary" data-bss-hover-animate="pulse" type="submit" style="margin: -3px;margin-left: 45%;margin-bottom: -32px;padding: 6px 12px;border-radius: 293px;height: 66px;text-align: center;margin-top: 24px;">Salvar</button>
            </form><!-- End: Register Form -->
        </div>
    </div>
</div>